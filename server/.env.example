# Presencia - Jitsi Meet Server Configuration
# Copy to .env and fill in your values. Run gen-passwords.sh to generate secrets.

# ─── Domain & SSL ───────────────────────────────────────────────
# Public domain pointing to this server (required)
JITSI_DOMAIN=meet.example.com

# Let's Encrypt email for SSL certificate (required)
LETSENCRYPT_EMAIL=you@example.com

# ─── Room Configuration ─────────────────────────────────────────
# Default room name for the telepresence session
PRESENCIA_ROOM=familia

# ─── Network ────────────────────────────────────────────────────
# Public IP of this server (for JVB)
JVB_ADVERTISE_IPS=

# HTTP/HTTPS ports
HTTP_PORT=80
HTTPS_PORT=443

# JVB media port (UDP)
JVB_PORT=10000

# ─── Secrets (generated by gen-passwords.sh) ────────────────────
JICOFO_AUTH_PASSWORD=
JVB_AUTH_PASSWORD=
JIGASI_XMPP_PASSWORD=
JIBRI_RECORDER_PASSWORD=
JIBRI_XMPP_PASSWORD=

# ─── Jitsi Internal ─────────────────────────────────────────────
JICOFO_COMPONENT_SECRET=
JICOFO_AUTH_USER=focus
JVB_AUTH_USER=jvb
JVB_BREWERY_MUC=jvbbrewery
JVB_TCP_HARVESTER_DISABLED=true
JVB_STUN_SERVERS=meet-jit-si-turnrelay.jitsi.net:443

# ─── Otel/Otel related (disable) ────────────────────────────────
OTEL_EXPORTER=none

# ─── Timezone ────────────────────────────────────────────────────
TZ=UTC
